// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  status Boolean
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("customers")
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  name String
  category String
  price Int
  description String
  otherImages String
  stock Int
}

model Purchase {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  items String
  total Int
  contact String
  address String
  status String
}